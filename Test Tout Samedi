from microbit import *
from machine import time_pulse_us
import utime

trig = pin0
echo = pin0
line_left = pin12
line_right = pin8

def getUltrasonicData():
    distances = []
    for _ in range(3):  # Trois mesures pour améliorer la précision
        trig.write_digital(0)
        utime.sleep_us(2)
        trig.write_digital(1)
        utime.sleep_us(10)
        trig.write_digital(0)
        
        duration = time_pulse_us(echo, 1, 30000)
        if duration > 0:
            distances.append((343 * duration / 2) * 100)  # Conversion en cm
        utime.sleep(0.01)  # Petit délai pour éviter les interférences
    
    if distances:
        return sum(distances) / len(distances)  # Moyenne des mesures
    return 100  # Valeur par défaut pour éviter les erreurs

def move(direction, speed=800):
    if direction == "forward":
        pin13.write_analog(speed)
        pin14.write_analog(0)
        pin15.write_analog(speed)
        pin16.write_analog(0)
    elif direction == "backward":
        pin13.write_analog(0)
        pin14.write_analog(speed)
        pin15.write_analog(0)
        pin16.write_analog(speed)
    elif direction == "right":
        pin13.write_analog(speed)
        pin14.write_analog(0)
        pin15.write_analog(0)
        pin16.write_analog(speed)
    elif direction == "left":
        pin13.write_analog(0)
        pin14.write_analog(speed)
        pin15.write_analog(speed)
        pin16.write_analog(0)
    elif direction == "stop":
        pin13.write_analog(0)
        pin14.write_analog(0)
        pin15.write_analog(0)
        pin16.write_analog(0)

while True:
    move("right", 600)  # Rotation initiale
    utime.sleep(0.1)

    while True:
        distance = getUltrasonicData()
        if 0 < distance < 80:
            break

    while getUltrasonicData() < 80:
        if not line_left.read_digital() or not line_right.read_digital():
            move("backward", 800)
            utime.sleep(0.5)  # Temps réduit pour réaction rapide
            move("right", 800)
            utime.sleep(0.5)
        else:
            move("forward", 900)
            utime.sleep(0.1)

    move("backward", 800)
    utime.sleep(0.5)
    move("right", 800)
    utime.sleep(0.5)
